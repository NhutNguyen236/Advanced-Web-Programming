doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous")
        title Product
    body
        div(class="container fluid")
            ul(class="list-group")
                li(class="list-group-item active") Chi tiết sản phẩm #{id}
                // middleware to view products detail
                - var prod_json = json_obj;
                - prod_json.forEach(item => {
                    - if(item.id == id)  
                        li(class="list-group-item") Name is #{item.name}
                        li(class="list-group-item") Price is #{item.price}
                        li(class="list-group-item") Description is #{item.description}
                - })

            